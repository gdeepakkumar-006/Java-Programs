package pattern;

public class Hallowsquare {
	public static void main(String[] args) {
		int row=4;
		int col=4;
		for(int i=0;i<=row;i++) {
			for(int j=0;j<=col;j++) {    
			if((i==0||i==col)||(j==0||j==col)) {
 				System.out.print("*");
			}else {
					System.out.print(" ");
				}
			
		}
		System.out.print();
	}
	}
}
	
